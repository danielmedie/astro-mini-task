---
interface SocialLinks {
  facebook?: string;
  twitter?: string;
  instagram?: string;
  linkedin?: string;
}

interface TeamMember {
  name: string;
  role: string;
  image: string;
  socialLinks: SocialLinks;
}

const props = Astro.props as TeamMember;
const { name, role, image, socialLinks } = props;
---

<div class="flex flex-col items-center bg-white pb-6  max-w-xs ">
    <img src={image} alt={name} class="w-full h-80 object-cover mb-4" />
    <div class="text-left w-full px-8 pb-6 pt-2 border-b border-l border-r border-gray-300 "> 
      <h3 class="text-xl font-semibold mb-1">{name}</h3>
      <p class="text-sm text-gray-500 mb-4">{role}</p>
      
      <hr class="w-8/10 border-t border-gray-300 mb-2 mx-auto" />
    
    <div class="flex justify-center items-center space-x-6 mt-4">
        {socialLinks.facebook && (
          <a href={socialLinks.facebook} aria-label="Facebook" class="text-gray-400 hover:text-blue-600 ">
            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="w-5 h-5 rounded-full" viewBox="0 0 24 24">
              <path d="M22.675 0h-21.35C.596 0 0 .596 0 1.326v21.348C0 23.404.596 24 1.326 24h11.497v-9.294H9.444v-3.622h3.379V8.413c0-3.34 2.03-5.158 4.992-5.158 1.422 0 2.647.106 3.004.154v3.48h-2.06c-1.617 0-1.93.77-1.93 1.897v2.486h3.862l-.503 3.622h-3.359V24h6.577c.73 0 1.326-.596 1.326-1.326V1.326C24 .596 23.404 0 22.675 0z"/>
            </svg>
          </a>
        )}
        {socialLinks.twitter && (
          <>
